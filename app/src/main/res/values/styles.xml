<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="toolbarStyle">@style/DefaultToolbarStyle</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="ActivityTheme" parent="AppTheme">
        <item name="android:background">@color/light_primary_color</item>
    </style>
    
    <style name="DefaultToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/DefaultToolbarTextAppearance</item>
    </style>
    
    <style name="DefaultToolbarTextAppearance">
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textColorSecondary">@color/title_text_color</item>
    </style>

    <color name="dark_primary_color">#388E3C</color>
    <color name="primary_color">#4caf50</color>
    <color name="dark_primary_color_b">#00FFFFFF</color>
    <color name="accent_color">#d32f2f</color>
    <color name="highlight_color">#FFC107</color>
    <color name="title_text_color">#FFFFFF</color>
    <color name="secondary_text">#DDFFFFFF</color>
    <color name="light_primary_color">#F0F4C3</color>
    <color name="primary_text_color">#424242</color>
    <color name="divider_color">#B6B6B6</color>
    <color name="panel_color">#6600BCD4</color>
</resources>
