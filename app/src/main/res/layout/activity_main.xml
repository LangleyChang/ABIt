<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/no_margin"
    android:layout_marginBottom="@dimen/no_margin"
    android:layout_margin="@dimen/no_margin"
    android:layout_height="fill_parent">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="0dp"
        android:id="@+id/vp_main"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        />

    <android.support.v7.widget.Toolbar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tb_main"
        app:title="@string/app_name"
        />
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/tb_main"
        android:id="@+id/ll_tabs"
        android:orientation="horizontal"
        android:background="@color/dark_primary_color">

        <ImageView
            android:id="@+id/iv_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="tab"
            android:layout_weight="1"
            android:background="@color/primary_dark_material_dark"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="tab"
            android:layout_weight="1"
            android:background="@color/divider_color"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="tab"
            android:layout_weight="1"
            android:background="@color/title_text_color"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="tab"
            android:layout_weight="1"
            android:background="@color/highlight_color"
            />
    </LinearLayout>
</RelativeLayout>
