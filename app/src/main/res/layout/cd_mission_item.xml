<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cd_layout"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">
            <ImageView
                android:id="@+id/iv_mission_preview"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/bg_cardtest"
                android:scaleType="centerCrop"/>
            <FrameLayout
                android:id="@+id/ly_card_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:id="@+id/tv_mission_title"
                    android:layout_margin="@dimen/card_title_left_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="AAAA"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/title_text_color"
                    />
            </FrameLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_mission_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4/28/2015"
                android:textSize="12sp"
                android:layout_margin="15dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/secondary_text"
               />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>