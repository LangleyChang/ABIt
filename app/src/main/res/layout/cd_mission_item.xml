<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cd_test"
    android:layout_margin="16dp"
    card_view:cardBackgroundColor="@color/dark_primary_color"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">
            <ImageView
                android:id="@+id/iv_mission_preview"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/bg_cardtest"
                android:scaleType="centerCrop"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_mission_title"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAAA"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/title_text_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4/12/2015"
                android:textColor="@color/secondary_text"
                android:id="@+id/tv_mission_date"
                android:layout_below="@+id/tv_mission_title"
                android:layout_alignRight="@+id/tv_mission_title"
                android:layout_alignEnd="@+id/tv_mission_title"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>